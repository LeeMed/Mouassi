<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:padding="16dp"
    tools:context=".MainActivity">


    <ImageView

        android:id="@+id/ivImage"
        android:layout_width="244dp"
        android:layout_height="385dp"
        android:background="#EFC9C9"
        app:layout_constraintBottom_toBottomOf="@+id/btnDeleteImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/btnUploadImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#09776A"
        android:text="Upload Image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/btnDeleteImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#09776A"
        android:text="Undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

    <EditText
        android:id="@+id/textView5"
        android:layout_width="141dp"
        android:layout_height="61dp"
        android:layout_marginBottom="4dp"
        android:hint="Image Name"
        android:textColor="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/btnUploadImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <Button
        android:id="@+id/buttonback"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:background="#07FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:textAlignment="center"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconTint="#F5FAF9"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#EF1111"
        app:strokeColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonphoto"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:background="#07FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_photo_library_24"
        app:iconTint="#F5FAF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/buttondown"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:background="#07FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_arrow_downward_24"
        app:iconTint="#F5FAF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonus"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:background="#07FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_face_24"
        app:iconTint="#F5FAF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>



